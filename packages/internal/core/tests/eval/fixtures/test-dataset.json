{
  "id": "test-dataset",
  "workflowName": "test-workflow",
  "version": "1.0.0",
  "cases": [
    {
      "id": "case-1",
      "name": "Simple test case",
      "input": { "prompt": "Hello" },
      "assertions": [
        { "type": "behavior.no_errors" },
        { "type": "output.contains", "path": "outputs.main.text", "value": "hello" }
      ],
      "tags": ["smoke"]
    },
    {
      "id": "case-2",
      "name": "Test with metrics",
      "input": { "prompt": "Generate code" },
      "assertions": [
        { "type": "behavior.no_errors" },
        { "type": "metric.latency_ms.max", "value": 30000 },
        { "type": "metric.total_cost_usd.max", "value": 0.50 },
        { "type": "metric.tokens.input.max", "value": 10000 },
        { "type": "metric.tokens.output.max", "value": 5000 }
      ],
      "tags": ["metrics", "smoke"]
    },
    {
      "id": "case-3",
      "name": "Multi-node test",
      "input": { "task": "Review code" },
      "assertions": [
        { "type": "behavior.no_errors" },
        { "type": "behavior.node_executed", "nodeId": "coder" },
        { "type": "behavior.node_executed", "nodeId": "reviewer" },
        { "type": "behavior.node_invocations.max", "nodeId": "coder", "value": 3 }
      ],
      "tags": ["multi-node"]
    }
  ]
}
