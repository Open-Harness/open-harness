{
  "name": "@open-scaffold/testing",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "description": "Shared testing utilities and recordings for Open Scaffold",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./recordings": "./recordings/test.db"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Open-Harness/open-harness",
    "directory": "packages/testing"
  },
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc -b tsconfig.json",
    "record": "bun src/record.ts"
  },
  "dependencies": {
    "@open-scaffold/core": "*",
    "@open-scaffold/server": "*"
  },
  "devDependencies": {
    "tsx": "^4.21.0"
  }
}
