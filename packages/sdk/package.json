{
	"name": "@openharness/sdk",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist",
		"prompts"
	],
	"scripts": {
		"typecheck": "tsc --noEmit",
		"check-types": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"lint:summary": "biome check --reporter summary .",
		"build": "bun build ./src/index.ts --outdir=dist --target=node --format=esm --sourcemap=external && tsc --declaration --emitDeclarationOnly --outDir dist",
		"test": "bun test tests/unit tests/replay",
		"test:unit": "bun test tests/unit",
		"test:replay": "bun test tests/replay"
	},
	"dependencies": {
		"@openharness/core": "workspace:*",
		"@anthropic-ai/claude-agent-sdk": "^0.1.76",
		"@anthropic-ai/sdk": "^0.52.0",
		"@needle-di/core": "^1.1.0",
		"handlebars": "^4.7.8",
		"reflect-metadata": "^0.2.2",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@openharness/anthropic": "workspace:*",
		"@types/bun": "latest"
	},
	"module": "src/index.ts",
	"peerDependencies": {
		"typescript": "^5"
	}
}
