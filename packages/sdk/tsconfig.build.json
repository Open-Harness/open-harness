{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override to emit declaration files
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",

    // Standard module resolution for builds
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,

    // Don't check external workspace packages during build
    "skipLibCheck": true,
    // Map workspace dependencies to empty module to avoid type checking them
    "paths": {
      "@open-harness/nodes-basic": ["./src/shims/nodes-basic.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "scripts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
