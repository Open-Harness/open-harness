{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override to emit declaration files
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",

    // Standard module resolution for builds
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "scripts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
