{
  "name": "open-harness",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "Open Harness - Event-sourced AI agent workflow runtime with Effect-TS",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/core.d.mts",
        "default": "./dist/core.mjs"
      },
      "require": {
        "types": "./dist/core.d.cts",
        "default": "./dist/core.cjs"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server.d.mts",
        "default": "./dist/server.mjs"
      },
      "require": {
        "types": "./dist/server.d.cts",
        "default": "./dist/server.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/client.d.mts",
        "default": "./dist/client.mjs"
      },
      "require": {
        "types": "./dist/client.d.cts",
        "default": "./dist/client.cjs"
      }
    },
    "./testing": {
      "import": {
        "types": "./dist/testing.d.mts",
        "default": "./dist/testing.mjs"
      },
      "require": {
        "types": "./dist/testing.d.cts",
        "default": "./dist/testing.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Open-Harness/open-harness",
    "directory": "packages/open-harness"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc -b tsconfig.json"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "@effect/platform": "latest",
    "@effect/sql": "latest",
    "@effect/sql-libsql": "latest",
    "@tanstack/react-query": "^5.0.0",
    "effect": "latest",
    "immer": "^10.1.1",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@open-scaffold/core": "*",
    "@open-scaffold/server": "*",
    "@open-scaffold/client": "*",
    "@open-scaffold/testing": "*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "keywords": [
    "ai",
    "agent",
    "workflow",
    "effect-ts",
    "event-sourcing",
    "anthropic",
    "claude"
  ]
}
