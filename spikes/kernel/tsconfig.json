{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"paths": {
			"@anthropic-ai/claude-agent-sdk": ["src/vendor/claude-agent-sdk.ts"]
		},
		"types": ["bun-types"],
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "examples/**/*.ts"]
}
