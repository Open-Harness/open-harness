{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": ["build/**", ".tsbuildinfo/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "docs#build": {
      "outputs": ["site/**"],
      "cache": true
    },
    "docs#dev": {
      "cache": false,
      "persistent": true
    }
  }
}
