{
  "name": "open-harness",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/**",
    "spikes/*",
    "examples/*"
  ],
  "type": "module",
  "scripts": {
    "lint": "turbo lint",
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test --filter='!@examples/*'",
    "test:examples": "turbo test --filter='@examples/*'",
    "typecheck": "turbo typecheck",
    "prepare": "lefthook install",
    "hooks:install": "lefthook install",
    "hooks:uninstall": "lefthook uninstall",
    "worktree": "scripts/new-worktree",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "^1.3.4",
    "lefthook": "^2.0.13",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.3",
    "typescript": "^5"
  },
  "packageManager": "bun@1.3.3",
  "module": "index.ts"
}
