{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReviewerOutput",
  "description": "Schema for reviewer node output - code review result",
  "type": "object",
  "properties": {
    "passed": {
      "type": "boolean",
      "description": "Whether the implementation passes review"
    },
    "feedback": {
      "type": "string",
      "description": "Summary of the review"
    },
    "issues": {
      "type": "array",
      "description": "List of issues that need to be addressed",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["passed", "feedback"]
}
