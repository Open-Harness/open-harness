{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"paths": {
			"@open-harness/kernel": ["../../packages/kernel/src/index.ts"],
			"@open-harness/kernel-v3": ["../../packages/kernel-v3/src/index.ts"]
		},
		"types": ["bun"],
		"lib": ["ES2022"],
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"]
}
