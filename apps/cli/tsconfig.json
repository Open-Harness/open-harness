{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "jsxImportSource": "@opentui/react",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@open-scaffold/core": ["../core/src/index.ts"],
      "@open-scaffold/core/*": ["../core/src/*.ts"],
      "@open-scaffold/server": ["../server/src/index.ts"],
      "@open-scaffold/server/*": ["../server/src/*.ts"]
    }
  }
}
