{
  "name": "@open-harness/cli",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "description": "Open Harness CLI - Run workflows from the terminal with a TUI",
  "bin": {
    "harness": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Open-Harness/open-harness",
    "directory": "apps/cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc -b tsconfig.json",
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@open-harness/core": "*",
    "@open-harness/server": "*",
    "@opentui/core": "^0.1.74",
    "@opentui/react": "^0.1.74",
    "commander": "^12.0.0",
    "jiti": "^2.0.0",
    "react": "^19.2.3"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "tsx": "^4.19.0"
  }
}
